{% block body %}
<!-- BEGIN BREADCRUMBS -->
<div class="breadcrumbs">
  <h1>recherches</h1>
  <ol class="breadcrumb">
    <li>
      <a href="#">Accueil</a>
    </li>
    <li>
      <a href="#">recherches</a>
    </li>
  </ol>
  <!-- Sidebar Toggle Button -->
  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".page-sidebar">
