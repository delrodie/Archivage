    <div class="page-content-row">
      <!-- BEGIN PAGE SIDEBAR -->
      <!--<div class="page-sidebar">
        <nav class="navbar" role="navigation"></nav>
      </div>-->
      <!-- END PAGE SIDEBAR -->
    <div class="page-content-col">
      <!-- BEGIN PAGE BASE CONTENT -->
      <div class="row">
      <div class="col-md-12">
      <!-- BEGIN EXAMPLE TABLE PORTLET-->
      <div class="portlet box blue">
        <div class="portlet-title">
          <div class="caption">
            <i class="fa fa-globe"></i>Resultats associés à {{ libelle|lower }}
          </div>
          <div class="tools"> </div>
        </div>
        <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover" id="sample_2">
        <thead>
        <tr>
        <th class="text-center"> ID </th>
        <th class="text-center"> EPI </th>
        <th class="text-center"> PROVISOIRE </th>
        <th class="text-center"> DEFINITIVE </th>
        <th class="text-center"> DESCRIPTION </th>
        <th class="text-center"> POSITION </th>
        <th class="text-center"> EXTREME </th>
        <th class="text-center"> DUREE </th>
        <th class="text-center"> STATUT </th>
        </tr>
        </thead>
          <tbody>
            {% set i = 0 %}
            {% for recherche in recherches %}
              {% set i = i + 1 %}
            <tr>
              <td class="text-right">{{ i }}</td>
              <td class="text-center">{{ recherche.epi }}</td>
              <td class="text-left">{{ recherche.provisoire }}</td>
              <td class="text-center">{{ recherche.libelle }}</a></td>
              <td class="text-justify">{{ recherche.description|capitalize }}</td>
              <td class="text-left">Etagère:<span style="font-weight:bold">  {{ recherche.etagere }} </span> <br> Position: <span style="font-weight:bold">{{ recherche.position }} </span></td>
              <td class="text-center">{{ recherche.extreme }}</td>
              <td class="text-center">{{ recherche.vie }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        </div>
      </div>
      <!-- END EXAMPLE TABLE PORTLET-->
      </div>
      </div>
