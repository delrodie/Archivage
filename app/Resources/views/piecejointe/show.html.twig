{% extends 'base.html.twig' %}

{% block body %}
    <h1>Piecejointe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ piecejointe.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ piecejointe.url }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ piecejointe.alt }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if piecejointe.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('piecejointe_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('piecejointe_edit', { 'id': piecejointe.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
