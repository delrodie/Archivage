{% extends 'base.html.twig' %}

{% block body %}
    <h1>Piecejointes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Alt</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for piecejointe in piecejointes %}
            <tr>
                <td><a href="{{ path('piecejointe_show', { 'id': piecejointe.id }) }}">{{ piecejointe.id }}</a></td>
                <td>{{ piecejointe.url }}</td>
                <td>{{ piecejointe.alt }}</td>
                <td>{% if piecejointe.statut %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('piecejointe_show', { 'id': piecejointe.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('piecejointe_edit', { 'id': piecejointe.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('piecejointe_new') }}">Create a new piecejointe</a>
        </li>
    </ul>
{% endblock %}
